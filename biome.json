{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": [
      ".venv-docs/**",
      "out/**",
      "**/dist/**",
      "**/node_modules/**",
      "**/target/**",
      "**/*.node",
      "**/vendor/**",
      "**/debug-traces/**",
      "**/Screens/**"
    ]
  }
}
